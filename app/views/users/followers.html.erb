
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <%= render 'user_info' %>
      <%= render 'follow_form' if logged_in? %>
    </section>
  </aside>
  <div class="col-md-8">
  <h3>フォローワー</h3>
  <ul class="list-group">
    <% @followers_user.each do |followers_user| %>
      <li class="list-group-item">
        <h4><%= link_to followers_user.name, followers_user %></h4>
        <%= followers_user.profile %>
      </li>
    <% end %>
  </ul>
  </div>
</div>

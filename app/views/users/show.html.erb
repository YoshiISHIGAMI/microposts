        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-2">プロフィール</div>
        <div class="col-sm-10">
          <%= @user.profile %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-2">居住国</div>
        <div class="col-sm-10">
